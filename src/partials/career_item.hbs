<li class="mb-2 ml-4 ">
    <div class="absolute w-3 h-3 bg-gray-300 rounded-full mt-1.5 -left-1.5 "></div>
    <time class="text-sm font-normal text-gray-600">
        {{#if this.date}}
        <div class="flex flex-row justify-between">
            <div class="font-mono">{{this.date}}</div>
            {{#if this.role}} 
            <div>
                <span class="tracking-wide font-semibold pr-1">{{this.role}}</span>|
                <span class="font-mono pr-1" >{{this.desig}}</span>|
                <span class="tracking-wide">{{this.org}}</span>
            </div>
            {{/if}}
        </div>
        {{/if}}    
        <ul class ="pt-1">
            {{#each this.projects}}
                {{> projects }}
            {{/each}}
        </ul>
    </time>
</li>